{% extends 'base.html.twig' %}

{% block body %}
    <h1>Controls list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Observaciones</th>
                <th>Fechainicio</th>
                <th>Fechafin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for control in controls %}
            <tr>
                <td><a href="{{ path('control_show', { 'id': control.id }) }}">{{ control.id }}</a></td>
                <td>{{ control.descripcion }}</td>
                <td>{{ control.observaciones }}</td>
                <td>{% if control.fechaInicio %}{{ control.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if control.fechaFin %}{{ control.fechaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('control_show', { 'id': control.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('control_edit', { 'id': control.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('control_new') }}">Create a new control</a>
        </li>
    </ul>
{% endblock %}
